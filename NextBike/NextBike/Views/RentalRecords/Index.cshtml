@model IEnumerable<NextBike.Models.RentalRecords>

@{
    ViewData["Title"] = "Histórico de Alocações";
}

<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Client.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bike.Brand)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bike.Model)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bike.Color)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RentalDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExpectedDeliveredDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeliveredDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Client.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Bike.Brand)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Bike.Model)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Bike.Color)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RentalDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ExpectedDeliveredDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DeliveredDate)
                </td>
                <td>
                   
                    @if (!@item.DeliveredDate.HasValue)
                    {
                        <a asp-action="Delivery" asp-route-id="@item.Id" class="btn btn-outline-primary">Devolver</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
